<h1>Show</h1>

<ul>
<li><%= @event.name %></li>
<% if @event.date %>
  <li><%= @event.pretty_date %></li>
  <li><%= @event.pretty_time %></li>
<% end %>
<% if @event.venue %>
  <li><%= @event.venue.name %></li>
  <li><%=@event.venue.address_1%></li>
  <% if @event.venue.address_2 %>
    <li><%=@event.venue.address_2%></li>
  <% end %>
  <li><%= @event.venue.city %></li>
  <li><%= @event.venue.province%></li>
  <li><%= @event.venue.postal_code%> </li>
  <li><%= @event.venue.country%></li>
  <% if @event.venue.phone_number %>
    <li><%= @event.venue.phone_number%></li>
    <%end%>
  <%end%>
</ul>

<p><%= link_to "View all events", events_path %></p>
<% if @event.genres.any? %>
  <p><%= link_to "#{@event.genres.first.name} Events", genre_path(@event.genres.first.id) %></p>
<% end %>



<div id="map"></div>
<script src="https://maps.googleapis.com/maps/api/js?key=<%=ENV["MAPS_KEY"]%>&callback=eventShowMap" async defer></script>
