
<div id="genre-map"></div>
<h1><%= @genre.name %> Events</h1>
<br>

<div class="card-deck">
  <% @events.each do |event| %>
  <div class="col-12 col-sm-12 col-md-6 col-lg-3 col-xl-3 mb-3 d-flex">
    <div class="card">
      <img class="card-img-top" src="<%= event.images.sixteen_by_nine.first.url %>" alt="Card image cap">
      <div class="card-body">
        <h4 class="card-title"><%= event.name %></h4>
        <% if event.date %>
          <p class="card-text"><small class="text-muted"><%= event.pretty_date %></small></p>
          <p class="card-text"><small class="text-muted"><%= event.pretty_time %></small></p>
        <% end %>
        <a href="<%= event_path(event.id) %>" class="btn btn-primary">More Details</a>
      </div>
    </div>
  </div>
  <% end %>
</div>


<%= paginate @events %>


<script src="https://maps.googleapis.com/maps/api/js?key=<%=ENV["MAPS_KEY"]%>&callback=genreShowMap" async defer></script>
