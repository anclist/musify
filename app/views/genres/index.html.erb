<div class="card-deck mt-3">
  <% @genres.random_genres.each do |genre| %>
    <% if genre.events.any? %>
      <div class="genre-card col-12 col-sm-12 col-md-6 col-lg-4 col-xl-4 mb-3">

        <div class="card bg-dark text-white ">
          <% if genre.events.any? %>
            <img class="card-img" src="<%= genre.events.joins(:images).random_event.first.images.sixteen_by_nine.first.url %>" alt="Card image">
          <% end %>

          <div class="card-img-overlay">
            <div class="row">

              <!-- Genre's name -->
              <div class="col-10">
                <a href="<%= genre_url(genre) %>"><h4 class="card-title genre-title"><%=genre.name%></h4></a>
              </div>

              <!-- Icon-heart -->
              <div class="col-2">
                <%= form_tag favourite_genre_path(genre) do%>
                  <label for="favourite-submit"><i class="icon-heart"></i></label>
                  <%= submit_tag 'Save', id: "favourite-submit" %>
                <% end %>
              </div>

            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
