<div class="card-deck mt-3">
  <% @genres.each do |genre| %>
    <% if genre.events.any? %>
      <div class="genre-card col-12 col-sm-12 col-md-4 col-lg-4 col-xl-4 mb-3">
        <a href="<%= genre_url(genre) %>"><div class="card bg-dark text-white ">
          <% if genre.events.any? %>
            <img class="card-img" src="<%= genre.events.joins(:images).random_event.first.images.sixteen_by_nine.first.url %>" alt="Card image">
          <% end %>
          <div class="card-img-overlay">
            <h4 class="card-title genre-title"><%=genre.name%></h4>
          </div>
        </div></a>
      </div>
    <% end %>
  <% end %>
</div>
