<div class="jumbotron mb-0">
  <h1 class="display-3" id="artist-name"><%= @artist.name %></h1>

  <div class="row">
    <div class="col">
      <img class="img-fluid" id="artist-image" src="" alt="<%= @artist.name %>">
    </div>
    <div class="col">
      <h2>Upcoming Events</h2>
      <% @artist.events.each do |event| %>
      <ul class="list-group">
        <li class="list-group-item"> <p><%= link_to event.name, event_path(event) %></p> <p><%= event.pretty_date %> @ <%= event.pretty_time %></p></li>
      </ul>
      <% end %>
    </div>
    <div class="col">

    </div>
  </div>
</div>
