<div class="jumbotron mb-0">
  <h1 class="display-3" id="artist-name"><%= @artist.name %></h1>

  <div class="row">
    <div id="image-column" class="col-12 col-sm-12 col-md-6 col-lg-4 col-xl-4">
      <!-- <img class="img-fluid" id="artist-image" src="" alt="<%#= @artist.name %>"> -->
    </div>
    <div class="col-12 col-sm-12 col-md-6 col-lg-4 col-xl-4">
      <h2>Upcoming Events</h2>
      <% @artist.events.each do |event| %>
      <ul class="list-group">
        <li class="list-group-item"> <p><%= link_to event.name, event_path(event) %></p> <p><%= event.pretty_date %> @ <%= event.pretty_time %></p></li>
      </ul>
      <% end %>
    </div>
    <div class="col-12 col-sm-12 col-md-6 col-lg-4 col-xl-4">
      <h2>Social Media</h2>
      <% if @artist.artist_socials.any? %>
        <% @artist.artist_socials.each do |social| %>
        <ul class="list-group">
          <li class="list-group-item text-center">
            <% if social.name == 'website' %>
              <%= link_to(social.url, target: "_blank") do %>
                <i class="icon-globe icon-2x"></i>
              <% end %>
            <% end %>
            <%= link_to(social.url, target: "_blank") do %>
              <i class="icon-<%= social.name %> icon-2x"></i>
            <% end %>
          </li>
        </ul>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
