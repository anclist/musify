<div class="jumbotron mb-0">
  <h1 class="display-3">Welcome, <%= @user.name %>!</h1>
  <p class="lead"><%= link_to "Edit your Profile", edit_user_path(@user) %></p>
  <hr class="my-4">
  <div class="row">
    <div class="col-12 col-sm-12 col-md-6 col-lg-4 col-xl-4">
      <%= image_tag @user.avatars.card.url %>
    </div>

    <!-- Favourite Genre -->
    <div class="col-12 col-sm-12 col-md-6 col-lg-4 col-xl-4">
      <h1>Favourite Genres</h1>
      <ul class="list-group pre-scrollable">
      <% if @user.genres.any? %>
        <% @user.genres.uniq.each do |genre| %>
        <li class="list-group-item">
          <%= link_to genre.name, genre_path(genre) %>
        </li>
        <% end %>
      <% else %>
        <li class="list-group-item">
          <p>You currently don't have any favourite genres</p>
        </li>
      <% end %>
      </ul>
    </div>

    <!-- List of my events -->
    <div class="col-12 col-sm-12 col-md-12 col-lg-4 col-xl-4">
      <h1>Events</h1>
      <ul class="list-group pre-scrollable">
        <% @user.events.each do |event| %>
        <li class="list-group-item">
          <a href="<%= event_url(event) %>"><%= event.name %></a>
          <p><%= event.pretty_date %> @ <%= event.pretty_time %></p>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
